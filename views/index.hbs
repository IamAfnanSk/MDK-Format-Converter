<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <script src="https://unpkg.com/feather-icons@4.28.0/dist/feather.min.js"></script>
  <title>Convert M.D.K. csv file to medica format</title>
</head>

<body>
  <div class="container mt-4">
    <img style="width: 350px;" src="/images/logo.png" alt="Logo">

    {{#if msg}}
    <h3 style="color: {{msgColor}};" class="msg">{{ msg }}</h3>
    <a href="/">Home</a>
    {{/if}}

    {{#if unUseableFiles}}
    <div class="mt-3">
      <h2>List of Unuseable Files</h2>
      <ul class="list-group mt-4">
        {{#each unUseableFiles}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          {{this}}
        </li>
        {{/each}}
      </ul>
    </div>
    {{/if}}

    {{#if show}}
    <h1>Refresh Email Token</h1>
    <form name="email-address" action="/forms/rfrshtoken" method="POST">
      <button type="submit" class="btn btn-primary">Refresh</button>
    </form>
    {{/if}}

    {{#if showFileForm}}
    <div class="mt-4">
      <h2>Upload File to Convert</h2>
      <form name="convert-file" action="/forms/convertThisFile" enctype="multipart/form-data" method="POST">
        <div>
          <label for="file" class="form-label">Select file to convert</label>
          <input multiple name="file" class="form-control form-control-lg" id="file" type="file">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Convert</button>
      </form>
    </div>
    {{/if}}

    {{#if files}}
    <div class="mt-3">
      <h2>Download Converted Files</h2>
      <ul class="list-group mt-4">
        {{#each files}}
        <li class="list-group-item d-flex justify-content-between align-items-center"><a
            href="/output/{{this}}">{{this}}</a>
          {{!-- <i style="cursor: pointer;" data-feather="trash"></i> --}}
        </li>
        {{/each}}
      </ul>
    </div>
    {{/if}}
  </div>

  <script>
    feather.replace()
  </script>
</body>

</html>